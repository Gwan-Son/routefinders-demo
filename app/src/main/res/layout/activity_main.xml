<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/main_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/kospiName"
                        android:text="코스피"
                        android:autoSizeMaxTextSize="30dp"
                        android:autoSizeMinTextSize="20dp"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/notosans"
                        android:gravity="left|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/kosdaqName"
                        android:text="코스닥"
                        android:autoSizeMaxTextSize="30dp"
                        android:autoSizeMinTextSize="20dp"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/notosans"
                        android:gravity="left|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/kospiNow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosans_bold"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="15dp"
                        android:text="현재 지수"
                        android:textColor="@color/black"
                        android:autoSizeMaxTextSize="22dp"
                        android:autoSizeMinTextSize="20dp"
                        android:autoSizeTextType="uniform" />
                    <TextView
                        android:id="@+id/kosdaqNow"
                        android:text="현재 지수"
                        android:autoSizeMaxTextSize="22dp"
                        android:autoSizeMinTextSize="20dp"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/notosans_bold"
                        android:gravity="left|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/kospiChange"
                        android:text="등락률"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="10dp"
                        android:autoSizeTextType="uniform"
                        android:paddingLeft="15dp"
                        android:fontFamily="@font/notosans"
                        android:gravity="left|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"/>
                    <TextView
                        android:paddingLeft="15dp"
                        android:id="@+id/kosdaqChange"
                        android:text="등락률"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="10dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/notosans"
                        android:gravity="left|center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#BFc9c9c9"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/helpImg"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_help_24_grey"
                android:layout_marginRight="15dp"/>
            <View
                android:layout_marginTop="5dp"
                android:background="#BFc9c9c9"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="9"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="20dp"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/black"
                    android:gravity="left|center_vertical"
                    android:text="인기 검색 목록"
                    android:fontFamily="@font/notosans_bold"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/helpImg2"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_baseline_help_24_grey"/>
            </LinearLayout>

            <View
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#BFc9c9c9"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/stock_item_recycler"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>