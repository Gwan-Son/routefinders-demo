<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/arirangImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/arirang"
        android:layout_gravity="center"
        android:layout_marginTop="203px"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시각장애인이시면 이미지를 눌러주세요."
            android:autoSizeMaxTextSize="20dp"
            android:autoSizeMinTextSize="12dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/notosans"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/login_stroke"
            android:fontFamily="@font/notosans"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:paddingLeft="12dp"
            android:textColorHint="#c9c9c9" />

        <EditText
            android:id="@+id/pwd_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/login_stroke"
            android:fontFamily="@font/notosans"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:textColorHint="#c9c9c9" />

        <android.widget.Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="20dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/login_btn"
            android:fontFamily="@font/notosans_bold"
            android:text="로그인"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:gravity="center"
                android:text="회원이 아니신가요? "
                android:textColor="@color/black"
                android:autoSizeMaxTextSize="20dp"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/signupTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans"
                android:gravity="center"
                android:text="회원가입 하기"
                android:textColor="#718ef4"
                android:autoSizeMaxTextSize="20dp"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeTextType="uniform" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>